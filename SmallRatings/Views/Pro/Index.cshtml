@{
    @model SmallRatings.Models.ProInfo;
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool Reg = (bool)TempData["Registered"];
}

@{
    if (Reg == true)
    {
        ViewData["Title"] = "Business Profile";
        <div class="intro-body">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 mx-auto">
                        <div class="text-center">
                            <h1 class="display-4">You're profile is registered</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        ViewData["Title"] = "New Business";
        <div class="intro-body">
            <h1>@ViewData["Title"]</h1>
            <div class="container">
                <div class="row">
                    <div class="flex-column mx-auto">
                        @using (Html.BeginForm("RegisterBiz", "Pro", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <span class="text-danger">@TempData["Error"]</span>
                            <div class="form-group">
                                <label asp-for="ProName" class="control-label"></label>
                                <input asp-for="ProName" class="form-control bg-transparent text-white" />
                                <span asp-validation-for="ProName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Location" class="control-label"></label>
                                <input asp-for="Location" class="form-control bg-transparent text-white" />
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <input asp-for="Description" class="form-control bg-transparent text-white" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Website" class="control-label"></label>
                                <input asp-for="Website" placeholder="https://" class="form-control bg-transparent text-white" />
                                <span asp-validation-for="Website" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ProEmail" class="control-label"></label>
                                <input asp-for="ProEmail" class="form-control bg-transparent text-white" />
                                <span asp-validation-for="ProEmail" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-success" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    }
}

@*Used for "client side validation" (javascript).
            It does not let the user send the form if it is not valid
            (according to Model Validation).*@
            @section Scripts
{
                @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }